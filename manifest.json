{
	"name": "XML Viewer",
	"version": "1.0.5",
	"description": "Formats remote, and local, XML documents for easy viewing.",
	"icons": { "16": "icon16.png",
			   "48": "icon48.png",
			  "128": "icon128.png" },
	"permissions" : ["tabs", "http://*/*", "https://*/*"],
	"background_page": "background.html",
	"content_scripts": [ {
		"js": [ "xregexp-min.js", "treeBuilder.js", "document_end.1.js" ],
		"matches": [ "file://*/*" ],
		"run_at": "document_end"
	} ]
}
